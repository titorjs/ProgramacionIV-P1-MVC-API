@{
    ViewData["Title"] = "Estado Activo del estudiante";
}
<h1 class="text-light">@ViewData["Title"]</h1>
<form method="post">
    <div class="mb-3">
        <label class="text-light">Nombre</label>
        <input class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label class="text-light">Estado actual</label>
        <input class="form-control" disabled>
    </div>
    <div class="mb-3">
        <div class="form-group">
            <label for="exampleSelect1" class="form-label mt-4 text-light" >Nuevo Estado </label>
            <select class="form-select" id="exampleSelect1">
                <option>Activo</option>
                <option>Inactivo</option>                
            </select>
        </div>
    </div>
    <div class="row col 6">
        <div class="col-6 col-md-6">
            <button class="btn btn-success">Guardar</button>
        </div>
        <div class="col-6 col-md-6">
            <a asp-action="Index" class="btn btn-primary">Regresar</a>
        </div>
    </div>
</form>

<p>En esta pagina se muestran los estados del estudiante</p>

