@model Estudiante
@{
    ViewData["Title"] = "Estado Activo del estudiante";
}

<script>
    function activar() {
        var act = document.getElementById('exampleSelect1').value;
        window.location.href = '@Url.Action("EditPagoFuncion", "Estudiante")?activo=' + act + '&id=' + @Model.Est_id;
    }
</script>

<h1 class="text-light">@ViewData["Title"]</h1>
<form method="post">
    <div class="mb-3">
        <label class="text-light">Nombre</label>
        <input class="form-control" asp-for="Est_nombre" disabled>
    </div>
    <div class="mb-3">
        <label class="text-light">Estado actual</label>
        <input class="form-control" value="@(Model.Est_activo?"Activo":"Inactivo")" disabled>
    </div>
    <div class="mb-3">
        <div class="form-group">
            <label for="exampleSelect1" class="form-label mt-4 text-light" >Nuevo Estado </label>
            <select class="form-select" id="exampleSelect1">
                <option>Activo</option>
                <option>Inactivo</option>                
            </select>
        </div>
    </div>
    <div class="row col 6">
        <div class="col-6 col-md-6">
            <a type="submit" class="btn btn-primary" onclick="activar()">Guardar</a>
        </div>
        <div class="col-6 col-md-6">
            <a asp-action="Index" class="btn btn-primary">Regresar</a>
        </div>
    </div>
</form>

<p>En esta pagina se muestran los estados del estudiante</p>

