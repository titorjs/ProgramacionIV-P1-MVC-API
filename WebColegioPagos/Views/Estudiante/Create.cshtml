@using WebColegioPagos.Models.Data;
@model RegistroEstudiante
@{
    ViewData["Title"] = "Nuevo Estudiante";
}
<h1 class="text-light">@ViewData["Title"]</h1>
<form method="post">
    <div class="mb-3">
        <label class="text-light">Nombre</label>
        <input class="form-control" asp-for="Est_nombre">
    </div>
    <div class="mb-3">
        <label class="text-light">Cedula</label>
        <input class="form-control" asp-for="Est_cedula">
    </div>
    <div class="mb-3">
        <label class="text-light">Direccion</label>
        <input class="form-control" asp-for="Est_direccion">
    </div>
    <div class="row col 6">
        <div class="col-6 col-md-6">
            <button class="btn btn-success">Guardar</button>
        </div>
        <div class="col-6 col-md-6">
            <a asp-action="Index" class="btn btn-primary">Regresar</a>
        </div>
    </div>
</form>

<p>En esta pagina se muestran el detalle del estudiante</p>