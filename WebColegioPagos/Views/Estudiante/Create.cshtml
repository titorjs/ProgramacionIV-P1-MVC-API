@{
    ViewData["Title"] = "Nuevo Estudiante";
}
<h1>@ViewData["Title"]</h1>
<form method="post">
    <div class="mb-3">
        <label>Nombre</label>
        <input class="form-control">
    </div>
    <div class="mb-3">
        <label>Cedula</label>
        <input class="form-control">
    </div>
    <div class="mb-3">
        <label>Direccion</label>
        <input class="form-control">
    </div>
    <div class="mb-3">
        <label>Estado actividad</label>
        <input class="form-control">
    </div>
    <div class="mb-3">
        <label>Pension</label>
        <input class="form-control">
    </div>
    <div class="row col 6">
        <div class="col-6 col-md-6">
            <button class="btn btn-primary">Guardar</button>
        </div>
        <div class="col-6 col-md-6">
            <a asp-action="Index" class="btn btn-outline-primary">Regresar</a>
        </div>
    </div>
</form>

<p>En esta pagina se muestran el detalle del estudiante</p>