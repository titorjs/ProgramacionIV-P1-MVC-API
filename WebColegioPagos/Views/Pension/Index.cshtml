@model List<Pension>
@{
    ViewData["Title"] = "Lista de Pensiones";
}
<h1 class="text-light">@ViewData["Title"]</h1>
<h4 class="text-light">Buscar pensión por ID</h4>
<nav class="navbar bg-body-tertiary bg-dark" data-bs-theme="dark">
    <div class="container-fluid">
        <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-secondary " type="submit">Buscar</button>
        </form>
    </div>
</nav>

<table class="table table-success table-striped-columns">
    <thead>
        <tr>
            <th scope="col">Id Pension</th>
            <th scope="col">Nombre</th>
            <th scope="col">Valor</th>  
            <th scope="col">Accion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Pen_id</td>
                <td>@item.Pen_nombre</td>
                <td>@item.Pen_valor</td>
                <td>
                    <a asp-action="Edit" asp-route-Pen_id="@item.Pen_id" class="btn btn-outline-primary"><i class="bi bi-pencil-fill"></i></a>
                </td>
            </tr>
        }
        
    </tbody>
</table>
<a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary">Regresar</a>



