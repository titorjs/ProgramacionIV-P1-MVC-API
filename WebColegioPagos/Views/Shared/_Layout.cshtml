<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebColegioPagos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebColegioPagos.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/estilos.css" />
</head>
<body>
<label for="btn-menu" id="lb-btn-menu">☰</label>
    <div class="capa"></div> 	<!-- Para hacer mas darkie	--------------->
    <!--	--------------->
    <input type="checkbox" id="btn-menu">
    <div class="container-menu">
        <div class="cont-menu">
            <nav>
                <a asp-area="" asp-controller="Home" asp-action="Index">Menú Inicio</a>
                <a asp-area="" asp-controller="Estudiante" asp-action="Index">Estudiantes</a>
                <a asp-area="" asp-controller="Pago" asp-action="Index">Pagos</a>
                <a asp-area="" asp-controller="Pension" asp-action="Index">Pensiones</a>
                <a asp-area="" asp-controller="Global" asp-action="Index">Global</a>
            </nav>
            <label for="btn-menu">✖️</label>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
